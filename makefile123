PROGRAM = Board

INCLUDEDIRS = \
	-I$(ARCENGINEHOME)/include \
	-I/usr/X11R6/include


LIBDIRS = \
	-L$(ARCENGINEHOME)/bin \
	-L/usr/X11R6/lib


CXXSOURCES = Board.cpp       # list of source files
CXXOBJECTS = $(CXXSOURCES:.cpp=.o)  # expands to list of object files
CXXFLAGS = -DESRI_UNIX $(INCLUDEDIRS)
CXX = g++

LDFLAGS = $(LIBDIRS) $(LIBS)

all: $(PROGRAM)

$(PROGRAM): $(CXXOBJECTS)
	$(CXX) -o $@ $(CXXOBJECTS) $(LDFLAGS)

Board.o: Board.cpp Piece.cpp chess.h
	$(CXX) $(CXXFLAGS) -c -o Board.o Board.cpp
	
Piece.o: Piece.cpp
	$(CXX) $(CXXFLAGS) -c Piece.cpp

clean:
	$(RM) -f $(CXXOBJECTS) $(PROGRAM)


